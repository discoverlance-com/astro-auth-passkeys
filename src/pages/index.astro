---
import Layout from "../layouts/Layout.astro";
import { ArrowRight, Key, Lock } from "lucide-react";
import { Button, buttonVariants } from "@/components/react/ui/button";
---

<Layout title="Welcome to Astro.">
  <main class="flex-1">
    <section class="w-full py-12 md:py-24 lg:py-32 xl:py-48">
      <div class="container px-4 md:px-6">
        <div class="flex flex-col items-center space-y-4 text-center">
          <div class="space-y-2">
            <h1
              class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
              transition:name="auth-header"
            >
              Astro Passkey Auth
            </h1>
            <p
              class="mx-auto max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400"
            >
              Seamless authentication with Astro and passkeys. Experience the
              future of secure, passwordless login.
            </p>
          </div>
          <div class="space-y-2">
            <p class="text-gray-500 dark:text-gray-400">
              <Key className="inline-block w-4 h-4 mr-1" />
              Passwordless authentication
            </p>
            <p class="text-gray-500 dark:text-gray-400">
              <Lock className="inline-block w-4 h-4 mr-1" />
              Enhanced security with WebAuthn
            </p>
          </div>
          <div class="w-full max-w-sm space-y-4">
            <a
              href="/register"
              class={buttonVariants({ className: "w-full", size: "lg" })}
            >
              Register
              <ArrowRight className="w-4 h-4 ml-2" />
            </a>
            <a
              href="/login"
              class={buttonVariants({
                className: "w-full",
                size: "lg",
                variant: "secondary",
              })}
            >
              Login
              <ArrowRight className="w-4 h-4 ml-2" />
            </a>
            <p class="text-xs text-gray-500 dark:text-gray-400">
              No password required. Uses your device's built-in authentication.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
